# Configurações do servidor
PORT=3000
NODE_ENV=development

# JWT Secret (ALTERE EM PRODUÇÃO!)
JWT_SECRET=patatinha-secret-key-change-in-production

# Banco de dados PostgreSQL (opcional por enquanto - usando dados em memória)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=patatinha_db
DB_USER=postgres
DB_PASSWORD=postgres

# Upload de arquivos
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# E-mail (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha
